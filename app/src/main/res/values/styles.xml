<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="NoButtonRadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RButton" parent="NoButtonRadioButton">
        <item name="android:background">@drawable/bottom_bar_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/menu_txt_selector</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>
    <style name="D6_Font">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff727475</item>
        <item name="android:shadowColor">#ccffffff</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A4_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="A6_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A7_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="A8_Font">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
        <item name="android:shadowColor">#88ffffff</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
</resources>